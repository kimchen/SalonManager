<Window x:Class="SalonManager.Views.InputNumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="InputNumWindow" Height="150" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="輸入數字" Name="Input" Style="{StaticResource InfoTxtStyle}"/>
                <TextBox Name="InputText"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="確定" Margin="5" Name="SaveButton" Foreground="Black" BorderBrush="Green" Background="GreenYellow" Click="SaveButton_Click" />
                <Button Content="取消" Margin="5" Name="CancelButton" Foreground="White" BorderBrush="Black" Background="Red" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
