<Window x:Class="SalonManager.Views.ChangePasswordWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="200" Width="300"
      WindowStartupLocation="CenterScreen"
	    Title="密碼變更視窗">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="輸入新密碼" Width="100"/>
                <TextBox Name="NewPassword" Width="150" Margin="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="確認新密碼"  Width="100"/>
                <TextBox Name="ConfirmPassword" Width="150" Margin="0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Padding="20 0" Margin="10 0" Click="ConfirmNewPassword">確定</Button>
                <Button Padding="20 0" Margin="10 0" Click="Cancel">取消</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
