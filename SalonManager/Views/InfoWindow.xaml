<Window x:Class="SalonManager.Views.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="EditWindow" Height="600" Width="800">
    <Grid>
        <Frame Name="PageFrame" Margin="10"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="儲存" HorizontalAlignment="Left" Margin="5" Name="SaveButton" VerticalAlignment="Bottom" Foreground="Black" BorderBrush="Green" Background="GreenYellow" Click="SaveButton_Click" />
            <Button Content="取消" HorizontalAlignment="Left" Margin="5" Name="CancelButton" VerticalAlignment="Bottom" Foreground="White" BorderBrush="Black" Background="Red" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
